<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".TataBogaActivity">

    <ScrollView
        android:scrollbars="none"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_tabo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_marginTop="35dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/linLay_tabo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="100">

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLay2_tabo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/linLay_tabo"
                        android:orientation="vertical">

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_tabo"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/tata_boga"/>

                    <TextView
                        android:textStyle="bold"
                        android:layout_below="@id/img_tabo"
                        android:id="@+id/txt_tabog"
                        android:textColor="@android:color/black"
                        android:textSize="22sp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="@string/tataboga"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TableRow
                        android:id="@+id/tabel4"
                        android:layout_marginTop="8dp"
                        android:layout_below="@id/txt_tabog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginLeft="8dp"
                            android:clickable="true"
                            android:id="@+id/pendaftar_tabog"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="15sp"
                            android:text="Lihat Pendaftar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            fontPath="fonts/Poppins-Bold.otf"
                            tools:ignore="MissingPrefix"/>

                        <TextView
                            android:id="@+id/jadwal_tabog"
                            android:layout_marginLeft="10dp"
                            android:clickable="true"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="15sp"
                            android:text="Jadwal Pelatihan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            fontPath="fonts/Poppins-Bold.otf"
                            tools:ignore="MissingPrefix"/>

                    </TableRow>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/tabel4"
                        android:id="@+id/desc_tabo"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:text="@string/desc_tabo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:textStyle="bold"
                        android:layout_below="@id/desc_tabo"
                        android:id="@+id/pelajari_tabo"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:text="@string/tataboga_mempelajari"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/pelajari_tabo"
                        android:id="@+id/tujuan_tabo"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="7dp"
                        android:text="1. Teori Jasa Boga"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/tujuan_tabo"
                        android:id="@+id/tujuan_tabo1"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="5dp"
                        android:text="2. Memasak masakan Indonesia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/tujuan_tabo1"
                        android:id="@+id/tujuan_tabo2"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="5dp"
                        android:text="3. Memasak masakan Asia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/tujuan_tabo2"
                        android:id="@+id/tujuan_tabo3"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="5dp"
                        android:text="4. Memasak masakan Continental"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/tujuan_tabo3"
                        android:id="@+id/tujuan_tabo4"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="5dp"
                        android:text="5. Pastry dan Bakery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/tujuan_tabo4"
                        android:id="@+id/tujuan_tabo5"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="5dp"
                        android:text="6. Membuat aneka adonan ragi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/tujuan_tabo5"
                        android:id="@+id/tujuan_tabo6"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="5dp"
                        android:text="7. Membuat dan menghias kue tart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/tujuan_tabo6"
                        android:id="@+id/tujuan_tabo7"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="5dp"
                        android:text="8. Membuat dessert"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/tujuan_tabo7"
                        android:id="@+id/tujuan_tabo8"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="5dp"
                        android:text="9. Table Manner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"
                        android:layout_marginBottom="8dp"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>