<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".LengkapiProfilActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_lengkapiprofil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:elevation="0dp"
        app:cardCornerRadius="8dp"
        android:layout_centerVertical="true"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_marginTop="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linlay_profil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:id="@+id/linlay_lengkapiprofil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearlay"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    android:textColor="@color/backgroundClr"
                    fontPath="fonts/Poppins-SemiBold.otf"
                    tools:ignore="MissingPrefix"
                    android:text="- Lengkapi Profil Anda -"
                    android:textAlignment="center"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:paddingBottom="20dp"
                    android:textColorHint="@color/backgroundClr"
                    android:id="@+id/alamatRumah"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Alamat Rumah"
                    fontPath="fonts/Poppins-Bold.otf"
                    tools:ignore="MissingPrefix"
                    android:inputType="textPostalAddress"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:drawableStart="@drawable/ic_address"
                    android:drawablePadding="@dimen/activity_vertical_margin"/>

                <EditText
                    android:paddingBottom="20dp"
                    android:textColorHint="@color/backgroundClr"
                    android:id="@+id/rtRumah"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="RT"
                    fontPath="fonts/Poppins-Bold.otf"
                    tools:ignore="MissingPrefix"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:drawablePadding="@dimen/activity_vertical_margin"/>

                <EditText
                    android:paddingBottom="20dp"
                    android:textColorHint="@color/backgroundClr"
                    android:id="@+id/rwRumah"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="RW"
                    fontPath="fonts/Poppins-Bold.otf"
                    tools:ignore="MissingPrefix"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:drawablePadding="@dimen/activity_vertical_margin"/>

                <EditText
                    android:paddingBottom="20dp"
                    android:textColorHint="@color/backgroundClr"
                    android:id="@+id/kelurahanRumah"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Kelurahan"
                    fontPath="fonts/Poppins-Bold.otf"
                    tools:ignore="MissingPrefix"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:drawablePadding="@dimen/activity_vertical_margin"/>

                <EditText
                    android:paddingBottom="20dp"
                    android:textColorHint="@color/backgroundClr"
                    android:id="@+id/kecamatanRumah"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Kecamatan"
                    fontPath="fonts/Poppins-Bold.otf"
                    tools:ignore="MissingPrefix"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:drawablePadding="@dimen/activity_vertical_margin"/>

                <EditText
                    android:paddingBottom="20dp"
                    android:textColorHint="@color/backgroundClr"
                    android:id="@+id/kotaAdm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Kota Administrasi"
                    fontPath="fonts/Poppins-Bold.otf"
                    tools:ignore="MissingPrefix"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:drawablePadding="@dimen/activity_vertical_margin"/>

            </LinearLayout>

        </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <TableRow
        android:gravity="center"
        android:layout_below="@id/cv_lengkapiprofil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:clickable="true"
            android:id="@+id/lengkapi"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:background="@drawable/btn_shape"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            fontPath="fonts/Poppins-SemiBold.otf"
            tools:ignore="MissingPrefix"
            android:text="Lengkapi Profil"
            android:textSize="17sp"
            android:textColor="@android:color/white"/>

    </TableRow>

</RelativeLayout>