<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".TeknikKomputerActivity">

    <ScrollView
        android:scrollbars="none"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_tekkomp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_marginTop="35dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/linLay_tekkomp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="100">

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLay2_tekkomp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/linLay_tekkomp"
                        android:orientation="vertical">

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_tekkomp"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/img_tekkomp"/>

                    <TextView
                        android:textStyle="bold"
                        android:layout_below="@id/img_tekkomp"
                        android:id="@+id/txt_tekkomp"
                        android:textColor="@android:color/black"
                        android:textSize="22sp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="Teknik Komputer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TableRow
                        android:id="@+id/tabel5"
                        android:layout_marginTop="8dp"
                        android:layout_below="@id/txt_tekkomp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginLeft="8dp"
                            android:clickable="true"
                            android:id="@+id/pendaftar_tekkomp"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="15sp"
                            android:text="Lihat Pendaftar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            fontPath="fonts/Poppins-Bold.otf"
                            tools:ignore="MissingPrefix"/>

                        <TextView
                            android:id="@+id/jadwal_tekkomp"
                            android:layout_marginLeft="10dp"
                            android:clickable="true"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="15sp"
                            android:text="Jadwal Pelatihan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            fontPath="fonts/Poppins-Bold.otf"
                            tools:ignore="MissingPrefix"/>

                    </TableRow>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/tabel5"
                        android:id="@+id/desc_tekkomp"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:text="Tujuan Pelatihan"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/desc_tekkomp"
                        android:id="@+id/desc_tekkomp1"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:text="@string/Teknik_komp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/desc_tekkomp1"
                        android:id="@+id/desc_tekkomp2"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:text="•  Mengenal dan memahami peralatan kelistrikan, elektronik dan peralatan digital yang berhubungan dengan komputer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/desc_tekkomp2"
                        android:id="@+id/desc_tekkomp3"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:text="• Memahami konsep dasar tentang perangkat lunak (software) dan perangkat keras (hardware) komputer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/desc_tekkomp3"
                        android:id="@+id/desc_tekkomp4"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:text="• Memahami prosedur dan proses instalasi komponen peralatan hardware dan software pada PC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/desc_tekkomp4"
                        android:id="@+id/desc_tekkomp5"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:text="• Mengenal berbagai jenis Motherboard, Processor, Memory, Harddisk, System yang digunakan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/desc_tekkomp5"
                        android:id="@+id/desc_tekkomp6"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:text="•  Merakit dan memperbaiki periferal komputer dengan konsep stand alone maupun jaringan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/desc_tekkomp6"
                        android:id="@+id/desc_tekkomp7"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:text="• Melakukan instalasi dan konfigurasi Operating System sesuai dengan kebutuhan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/desc_tekkomp7"
                        android:id="@+id/desc_tekkomp8"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:text="• Mendiagnosa dan mengatasi kesalahan-kesalahan yang sering terjadi pada sistem komputer, baik secara hardware maupun software dan solusinya"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/desc_tekkomp8"
                        android:id="@+id/desc_tekkomp9"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:text="• Memahami konsep dasar sistem jaringan LAN (Local Area Network) dan melakukan konfigurasi komputer yang menggunakan operating system windows dengan menggunakan berbagai protocol: TCP/IP, dsb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:textStyle="bold"
                        android:layout_below="@id/desc_tekkomp9"
                        android:id="@+id/pelajari_tekkomp"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:text="@string/teknikkomp_mempelajari"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/pelajari_tekkomp"
                        android:id="@+id/tujuan_tekkomp"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="7dp"
                        android:text="1. Teknik dasar elektronika"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/tujuan_tekkomp"
                        android:id="@+id/tujuan_tekkomp1"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="5dp"
                        android:text="2. Teknik dasar listrik"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/tujuan_tekkomp1"
                        android:id="@+id/tujuan_tekkomp2"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="5dp"
                        android:text="3. Teknik dasar digital"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/tujuan_tekkomp2"
                        android:id="@+id/tujuan_tekkomp3"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="5dp"
                        android:text="4. Disk Operating System (DOS)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/tujuan_tekkomp3"
                        android:id="@+id/tujuan_tekkomp4"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="5dp"
                        android:text="5. Mengenal perangkat-perangkat komputer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/tujuan_tekkomp4"
                        android:id="@+id/tujuan_tekkomp5"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="5dp"
                        android:text="6. Mengenal komponen-komponen elektronik"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/tujuan_tekkomp5"
                        android:id="@+id/tujuan_tekkomp6"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="5dp"
                        android:text="7. Maintenance dan Troubleshooting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/tujuan_tekkomp6"
                        android:id="@+id/tujuan_tekkomp7"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="5dp"
                        android:text="8. Jaringan (LAN)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/tujuan_tekkomp7"
                        android:id="@+id/tujuan_tekkomp8"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="5dp"
                        android:text="9. Instalasi program komputer (Windows)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>