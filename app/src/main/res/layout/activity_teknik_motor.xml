<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".TeknikMotorActivity">

    <ScrollView
        android:scrollbars="none"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_tsm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_marginTop="35dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/linLay_tsm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="100">

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLay2_tsm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/linLay_tsm"
                        android:orientation="vertical">

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_tsm"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/teknikmotor"/>

                    <TextView
                        android:textStyle="bold"
                        android:layout_below="@id/img_tsm"
                        android:id="@+id/txt_tsm"
                        android:textColor="@android:color/black"
                        android:textSize="22sp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="@string/tekniksepeda_motor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TableRow
                        android:id="@+id/tabel6"
                        android:layout_marginTop="8dp"
                        android:layout_below="@id/txt_tsm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginLeft="8dp"
                            android:clickable="true"
                            android:id="@+id/pendaftar_tsm"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="15sp"
                            android:text="Lihat Pendaftar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            fontPath="fonts/Poppins-Bold.otf"
                            tools:ignore="MissingPrefix"/>

                        <TextView
                            android:id="@+id/jadwal_tsm"
                            android:layout_marginLeft="10dp"
                            android:clickable="true"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="15sp"
                            android:text="Jadwal Pelatihan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            fontPath="fonts/Poppins-Bold.otf"
                            tools:ignore="MissingPrefix"/>

                    </TableRow>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/tabel6"
                        android:id="@+id/desc_tsm"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:text="@string/desc_tsm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:textStyle="bold"
                        android:layout_below="@id/desc_tsm"
                        android:id="@+id/pelajari_tsm"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:text="@string/tsm_mempelajari"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/pelajari_tsm"
                        android:id="@+id/tujuan_tsm"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="7dp"
                        android:text="1. Bagian-bagian mesin serta komponen-komponen mesin sepeda motor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/tujuan_tsm"
                        android:id="@+id/tujuan_tsm1"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="5dp"
                        android:text="2. Kelistrikan pada sepeda motor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/tujuan_tsm1"
                        android:id="@+id/tujuan_tsm2"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="5dp"
                        android:text="3. Troubleshooting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/tujuan_tsm2"
                        android:id="@+id/tujuan_tsm3"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="5dp"
                        android:text="4. Motor Bakar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/tujuan_tsm3"
                        android:id="@+id/tujuan_tsm4"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="5dp"
                        android:text="5. Pengenalan Spare Part"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/tujuan_tsm4"
                        android:id="@+id/tujuan_tsm5"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="5dp"
                        android:text="6. Chasis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/tujuan_tsm5"
                        android:id="@+id/tujuan_tsm6"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="5dp"
                        android:text="7. Engine Overhoul (bongkar pasang mesin)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"
                        android:layout_marginBottom="8dp"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>