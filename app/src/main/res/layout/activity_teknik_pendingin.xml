<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".TeknikPendinginActivity">

    <ScrollView
        android:scrollbars="none"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_pendingin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_marginTop="35dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/linLay_pendingin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="100">

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLay2_pendingin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/linLay_pendingin"
                        android:orientation="vertical">

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_pendingin"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/teknik_pendingin"/>

                    <TextView
                        android:textStyle="bold"
                        android:layout_below="@id/img_pendingin"
                        android:id="@+id/txt_pendingin"
                        android:textColor="@android:color/black"
                        android:textSize="22sp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="@string/teknik_pendingin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TableRow
                    android:id="@+id/tabel7"
                    android:layout_marginTop="8dp"
                    android:layout_below="@id/txt_pendingin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:clickable="true"
                        android:id="@+id/pendaftar_pendingin"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="15sp"
                        android:text="Lihat Pendaftar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:id="@+id/jadwal_pendingin"
                        android:layout_marginLeft="10dp"
                        android:clickable="true"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="15sp"
                        android:text="Jadwal Pelatihan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                </TableRow>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/tabel7"
                        android:id="@+id/desc_pendingin"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:text="Tujuan Pelatihan"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/desc_pendingin"
                        android:id="@+id/desc_pendingin1"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:text="@string/teknik_pendingin_dapat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/desc_pendingin1"
                        android:id="@+id/desc_pendingin2"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:text="• Membuka wawasan tentang dunia refrijerasi dan tata udara"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/desc_pendingin2"
                        android:id="@+id/desc_pendingin3"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:text="• Mengetahui pentingnya refrijerasi dan tata udara, tantangan yang dihadapi dalam berbagai level pekerjaan dan lingkup dunia industri refrijerasi dan tata udara"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/desc_pendingin3"
                        android:id="@+id/desc_pendingin4"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:text="• Mengetahui pentingnya industri refrijerasi dan tata udara telah membantu dan membuka peluang terhadap segala keperluan perilaku kehidupan modern"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/desc_pendingin4"
                        android:id="@+id/desc_pendingin5"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:text="• Tersedianya lapangan pekerjaan dari perencanaan atau desain peralatan, manufaktur atau pembuatan peralatan, penjualan, pemasangan dan pemeliharaan peralatan refrijerasi dan tata udara sekaligus tantangan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/desc_pendingin5"
                        android:id="@+id/desc_pendingin6"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:text="• Memiliki kemampuan dan pengetahuan tentang dasar pengkondisian udara serta proses refrijerasi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:textStyle="bold"
                        android:layout_below="@id/desc_pendingin6"
                        android:id="@+id/pelajari_pendingin"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:text="@string/teknikpendingin_mempelajari"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/pelajari_pendingin"
                        android:id="@+id/tujuan_pendingin"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="7dp"
                        android:text="1. Refrijerasi dan Tata Udara"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/tujuan_pendingin"
                        android:id="@+id/tujuan_pendingin1"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="5dp"
                        android:text="2. Alat dan Bahan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/tujuan_pendingin1"
                        android:id="@+id/tujuan_pendingin2"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="5dp"
                        android:text="3. Komponen Refrijerasi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/tujuan_pendingin2"
                        android:id="@+id/tujuan_pendingin3"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="5dp"
                        android:text="4. Listrik, Refrijerasi dan AC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_below="@id/tujuan_pendingin3"
                        android:id="@+id/tujuan_pendingin4"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="5dp"
                        android:text="5. Service / Reparasi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontPath="fonts/Poppins-Bold.otf"
                        tools:ignore="MissingPrefix"
                        android:layout_marginBottom="8dp"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>